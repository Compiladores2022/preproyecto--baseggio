Program {
	Int x = 10;

	void print(Int x) extern;
	
	Int inc(Int x) {
		return x + 1;
	}
	
	Int fact(Int n) {
		if(n == 0 || n == 1) then {
			return 1;
		} else {
			return n * fact(n - 1);
		}
	}
	
	void assertTrue(Bool expression) extern;
	
	void assertEquals(Int expected, Int value) extern;
	
	void testGlobalVar_1() {
		assertEquals(10, x);
	}
	
	void testGlobalVar_2() {
		x = inc(inc(inc(inc(inc(x)))));
		assertEquals(15, x);
	}
	
	void testGlobalVar_3() {
		x = 5;
		x = fact(x) * fact(inc(x));
		assertEquals(86400, x);
	}

	void main() {
		testGlobalVar_1();
		testGlobalVar_2();
		testGlobalVar_3();
	}
}
