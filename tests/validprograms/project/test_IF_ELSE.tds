Program {
	void assertTrue(Bool expression) extern;
	
	void assertEquals(Int expected, Int value) extern;
	
	Int fact(Int n) {
		if(n == 0 || n == 1) then {
			return 1;
		} else {
			return n * fact(n - 1);
		}
	}
	
	void testFact_1() {
		Int x = fact(0);
		assertEquals(1, x);
	}
	
	void testFact_2() {
		Int x = fact(1);
		assertEquals(1, x);
	}
	
	void testFact_3() {
		Int x = fact(2);
		assertEquals(2, x);
	}
	
	void testFact_4() {
		Int x = fact(3);
		assertEquals(6, x);
	}
	
	void testFact_5() {
		Int x = fact(4);
		assertEquals(24, x);
	}
	
	void testFact_6() {
		Int x = fact(5);
		assertEquals(120, x);
	}
	
	void testFact_7() {
		Int x = fact(6);
		assertEquals(720, x);
	}
	
	void main() {
		testFact_1();
		testFact_2();
		testFact_3();
		testFact_4();
		testFact_5();
		testFact_6();
		testFact_7();
	}
}
