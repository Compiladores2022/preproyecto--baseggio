Program {
	Int abs(Int x) {
		if(x < 0) then {
			x = -x;
		}
		
		return x;
	}
	
	void assertTrue(Bool expression) extern;
	
	void assertEquals(Int expected, Int value) extern;
	
	void testAbs_1() {
		Int x = abs(0);
		assertEquals(0, x);
	}
	
	void testAbs_2() {
		Int x = abs(-1);
		assertEquals(1, x);
	}
	
	void testAbs_3() {
		Int x = abs(-2);
		assertEquals(2, x);
	}
	
	void testAbs_4() {
		Int x = abs(-3);
		assertEquals(3, x);
	}
	
	void testAbs_5() {
		Int x = abs(-4);
		assertEquals(4, x);
	}
	
	void main() {
		testAbs_1();
		testAbs_2();
		testAbs_3();
		testAbs_4();
		testAbs_5();
	}
}
