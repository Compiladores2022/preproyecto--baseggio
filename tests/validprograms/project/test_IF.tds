Program {
	Int abs(Int x) {
		if(x < 0) then {
			return -x;
		}
	}
	
	void assertTrue(Bool expression) extern;
	
	void testAbs_1() {
		Int x = abs(0);
		assertTrue(x == 0 || x > 0);
	}
	
	void testAbs_2() {
		Int x = abs(-1);
		assertTrue(x == 0 || x > 0);
	}
	
	void testAbs_3() {
		Int x = abs(-1);
		assertTrue(x == 0 || x > 0);
	}
	
	void testAbs_4() {
