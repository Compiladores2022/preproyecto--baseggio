		assertTrue(x == 0 || x > 0);
	}
	
	void testAbs_5() {
		Int x = abs(-3);
		assertTrue(x == 0 || x > 0);
	}
	
	void main() {
		testAbs_1();
		testAbs_2();
		testAbs_3();
		testAbs_4();
		testAbs_5();
	}
